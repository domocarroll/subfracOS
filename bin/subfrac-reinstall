#!/bin/bash

set -e

if [ "$EUID" -eq 0 ]; then
  echo "Error: This script should not be run as root"
  exit 1
fi

echo -e "This will reinstall all the default subfracOS packages and reset all default configs.\nWarning: All changes to configs will be lost.\n"

if gum confirm "Are you sure you want to reinstall and lose all config changes?"; then
  echo "Resetting subfracOS repository"
  git clone "https://github.com/domocarroll/subfracOS.git" ~/.local/share/subfrac-new >/dev/null
  rm -rf $SUBFRAC_PATH
  mv ~/.local/share/subfrac-new $SUBFRAC_PATH

  echo "Reinstalling missing subfracOS packages"
  mapfile -t packages < <(grep -v '^#' "$SUBFRAC_PATH/install/subfrac-base.packages" | grep -v '^$')
  sudo pacman -Syu --noconfirm --needed "${packages[@]}"

  echo "Resetting all subfracOS configs"
  cp -R ~/.local/share/subfrac/config/* ~/.config/
  cp ~/.local/share/subfrac/default/bashrc ~/.bashrc
  echo '[[ -f ~/.bashrc ]] && . ~/.bashrc' | tee ~/.bash_profile >/dev/null

  $(bash $SUBFRAC_PATH/install/config/theme.sh)
  $(bash $SUBFRAC_PATH/install/config/git.sh)

  subfrac-refresh-limine
  subfrac-refresh-plymouth
  omarchy-nvim-setup
fi
